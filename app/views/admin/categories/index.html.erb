<% content_for :title, "Categories" %>

<div class="w-full ">
    <% if notice.present? %>
    <p class="py-3 px-4 bg-green-100 text-green-700 font-medium rounded-lg shadow-sm mb-6" id="notice">
        <%= notice %>
    </p>
    <% end %>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
        <h1 class="text-3xl font-extrabold text-gray-900">Categories</h1>
        <%= link_to "New Category", new_admin_category_path, class: "inline-flex items-center justify-center rounded-lg bg-blue-600 px-5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 transition" %>
    </div>

    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200 rounded-lg shadow-sm overflow-hidden bg-white">
            <thead class="bg-gray-100">
                <tr>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-semibold text-gray-700 whitespace-nowrap">Name</th>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-semibold text-gray-700 whitespace-nowrap">Description</th>
                    <th scope="col" class="px-6 py-4 text-left text-sm font-semibold text-gray-700 whitespace-nowrap">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-blue-100">
                <% @admin_categories.each do |c| %>
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-700">
                        <%= link_to c.name, admin_category_path(c), class: "hover:underline" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                        <%= c.description.presence || "-" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                        <div class="flex space-x-2">
                            <!-- View -->
                            <%= link_to admin_category_path(c), class: "text-blue-600 hover:text-blue-900", title: "View Details" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            <% end %>

                            <!-- Edit -->
                            <%= link_to edit_admin_category_path(c), class: "text-green-600 hover:text-green-900", title: "Edit" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                            </svg>
                            <% end %>

                            <!-- Delete -->
                            <%= button_to admin_category_path(c), method: :delete,
              form_class: "inline",
              class: "text-red-600 hover:text-red-800 font-medium cursor-pointer bg-transparent border-0 p-0",
              data: { turbo_confirm: "Are you sure?" },
              title: "Delete" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            <% end %>

                        </div>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>