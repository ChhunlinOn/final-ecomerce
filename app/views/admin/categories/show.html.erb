<% content_for :title, "Showing category" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Showing category</h1>

  <%= render @admin_category %>

  <%= link_to "Edit this category", edit_admin_category_path(@admin_category), class: "w-full sm:w-auto text-center rounded-md p-2 bg-green-600 hover:bg-green-300 text-white inline-block font-medium" %>
  <%= link_to "Back to category", admin_categories_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md p-2 bg-gray-600 hover:bg-gray-300 text-white inline-block font-medium" %>
  <%= link_to "Destroy this category", new_admin_category_path(@admin_category), method: :delete, form_class: "sm:inline-block  mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md p-2 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
</div>
