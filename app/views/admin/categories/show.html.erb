<% content_for :title, "Category Detail ##{@category.id}" %>

<!-- Header -->
<div class="mb-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Category Detail #<%= @category.id %></h1>
      <p class="text-sm text-gray-600">Detailed information about this category</p>
    </div>

    <div class="flex flex-wrap gap-2">
      <%= link_to admin_categories_path, class: "inline-flex items-center px-3 py-1.5 bg-gray-600 text-sm text-white rounded-lg hover:bg-gray-700 transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to List
      <% end %>
    </div>
  </div>
</div>

<!-- Main Info Box -->
<div class="bg-white rounded-xl shadow-lg border border-gray-200">
  <div class="bg-gradient-to-r from-blue-50 to-purple-50 px-6 py-4 border-b border-gray-200">
    <h2 class="text-xl font-semibold text-gray-900 mb-1">Category Information</h2>
    <p class="text-sm text-gray-700">Overview of category name, description, and timestamps.</p>
  </div>

  <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <dt class="text-xs font-semibold text-gray-500 uppercase mb-1">ID</dt>
      <dd class="text-sm font-medium text-gray-900 bg-gray-50 px-3 py-2 rounded-lg">
        #<%= @category.id %>
      </dd>
    </div>

    <div>
      <dt class="text-xs font-semibold text-gray-500 uppercase mb-1">Name</dt>
      <dd class="text-sm font-medium text-gray-900 bg-gray-50 px-3 py-2 rounded-lg">
        <%= @category.name %>
      </dd>
    </div>

    <div class="md:col-span-2">
      <dt class="text-xs font-semibold text-gray-500 uppercase mb-1">Description</dt>
      <dd class="text-sm text-gray-700 bg-gray-50 px-3 py-2 rounded-lg">
        <%= @category.description.presence || "No description provided." %>
      </dd>
    </div>
  </div>
</div>
