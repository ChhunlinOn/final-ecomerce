<div class="bg-gray-800 text-white text-center py-20">
  <h1 class="text-5xl font-bold mb-4">Welcome to Ecomm</h1>
  <p class="text-xl mb-8">Your one-stop shop for all your e-commerce needs!</p>
  <%= link_to "Shop Now", client_root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="flex flex-wrap justify-center mt-8 items-stretch gap-10">
  <% @main_categories.each do |category| %>
    <%= link_to client_category_path(category), class: "w-full sm:w-72 md:w-80 lg:w-96" do %>
      <div class="bg-white shadow-lg rounded-2xl p-8 h-full flex flex-col justify-center items-center hover:shadow-2xl transition duration-300 ease-in-out">
        <h2 class="font-bold text-2xl text-indigo-700 text-center mb-4">
          <%= category.name %>
        </h2>
        <p class="text-gray-500 text-center">Explore items in <%= category.name %> category</p>
      </div>
    <% end %>
  <% end %>
</div>


