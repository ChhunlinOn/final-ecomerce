<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 via-white to-blue-50 px-4">
  <div class="bg-white p-8 rounded-2xl shadow-2xl w-full max-w-md sm:max-w-lg md:max-w-xl">
    <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-8">Welcome Back</h2>

    <%= form_with url: login_path, method: :post, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :email, class: "block text-sm font-semibold text-gray-600 mb-1" %>
        <%= form.email_field :email, class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-semibold text-gray-600 mb-1" %>
        <%= form.password_field :password, class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" %>
      </div>

      <div class="flex items-center justify-between">
        <label class="flex items-center text-sm text-gray-600">
          <input type="checkbox" class="form-checkbox text-blue-600 rounded mr-2" />
          Remember me
        </label>
        <a href="#" class="text-sm text-blue-600 hover:underline">Forgot password?</a>
      </div>

      <%= form.submit 'Log In', class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg transition shadow-lg" %>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Don't have an account?
        <a href="#" class="text-blue-600 hover:underline font-medium">Sign up</a>
      </p>
      <%= link_to 'Back to Home', root_path, class: "inline-block mt-4 text-blue-500 hover:text-blue-700 text-sm underline" %>
    </div>
  </div>
</div>
